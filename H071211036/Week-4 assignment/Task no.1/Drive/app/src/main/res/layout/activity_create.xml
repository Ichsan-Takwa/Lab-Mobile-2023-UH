<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".CreateActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/authbg" />

    <androidx.cardview.widget.CardView
        android:layout_width="415dp"
        android:layout_height="786dp"
        android:layout_gravity="center"
        android:layout_marginTop="-30dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="50dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="787dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="245dp"
                android:layout_height="78dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:src="@drawable/auth_logo" />

            <TextView
                android:id="@+id/titleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/loftus"
                android:text="register"
                android:textColor="#0f2f46"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/subtitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/inter_medium"
                android:text="create an account"
                android:textColor="#0f2f46"/>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutCompat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/field1Til"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:forceDarkAllowed="false"
                    android:textColorHint="#0f2f46"
                    app:boxStrokeColor="#0f2f46"
                    app:boxStrokeErrorColor="#0f2f46"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Large">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/unameReg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="40dp"
                        android:hint="username"
                        android:fontFamily="@font/inter_medium"
                        android:inputType="text"
                        android:textColor="#0f2f46" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/field2Til"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:forceDarkAllowed="false"
                    android:textColorHint="#0f2f46"
                    app:boxStrokeColor="#0f2f46"
                    app:boxStrokeErrorColor="#0f2f46"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Large">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passReg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="40dp"
                        android:fontFamily="@font/inter_medium"
                        android:hint="password"
                        android:inputType="textPassword"
                        android:textColor="#0f2f46" />
                </com.google.android.material.textfield.TextInputLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#FCEBE7"
                    android:fontFamily="@font/inter_bold"
                    android:text="select language"
                    android:textAllCaps="false"
                    android:textColor="#0f2f46"
                    app:cornerRadius="50dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/registerBt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ff726b"
                    android:fontFamily="@font/inter_bold"
                    android:text="register"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    app:cornerRadius="50dp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>

